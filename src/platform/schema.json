{
  "$schema": "http://json-schema.org/schema",
  "$id": "PlatformSchematic",
  "title": "Platform App Generator",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the platform app",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "port": {
      "description": "Port number for the platform app",
      "type": "number",
      "default": 4200
    },
    "force": {
      "description": "Overwrite existing files",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name"]
}